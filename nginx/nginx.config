# nginx/nginx.conf
events {}

http {
    upstream backend {
        server backend:5000; # Matches the backend service name in docker-compose
    }

    upstream ai-service {
        server ai-service:8501; # Matches the ai-service name and its port
    }

    server {
        listen 80;

        # Route API requests to the backend
        location /api/ {
            proxy_pass http://backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
        }

        # Route requests to TensorFlow Serving (if you use it)
        location /v1/models/ {
            proxy_pass http://ai-service;
        }

        # For now, route everything else to the backend
        # (Later, you will add a frontend service here)
        location / {
            proxy_pass http://backend;
        }
    }
}